---
const { frontmatter, title, children } = Astro.props;
import Layout from '../layouts/Layout.astro';
---

<Layout title={frontmatter.title}>
  <main class="container">
    <h1>{frontmatter.title}</h1>
    {frontmatter.date && <p class="text-muted">{frontmatter.date}</p>}
    <article>
      <slot />
    </article>
  </main>
</Layout>